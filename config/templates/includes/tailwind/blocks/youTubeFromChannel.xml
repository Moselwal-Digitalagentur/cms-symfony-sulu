<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <block name="blocks" default-type="youtube-from-channel">
        <!-- @see https://docs.sulu.io/en/2.1/reference/content-types/block.html -->

        <types>
            <type name="youtube-from-channel">
                <meta>
                    <title>YT from channel</title>
                </meta>
                <properties>
                    <property name="headline" type="text_line">
                        <meta>
                            <title>Headline</title>
                        </meta>
                        <params>
                            <param name="headline" value="true"/>
                        </params>
                    </property>
                    <property name="subline" type="text_line">
                        <meta>
                            <title>Subline</title>
                        </meta>
                    </property>
                    <property name="playlistid" type="text_line">
                        <meta>
                            <title>Playlist ID</title>
                        </meta>
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>
