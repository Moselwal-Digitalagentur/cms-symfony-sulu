<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns:xi="http://www.w3.org/2001/XInclude"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
  <block name="blocks" default-type="faq">
    <!-- @see https://docs.sulu.io/en/2.1/reference/content-types/block.html -->
    <types>
      <type name="faq">
        <meta>
          <title>FAQ</title>
        </meta>
        <properties>
          <block name="faqs" default-type="items" minOccurs="0">
            <meta>
              <title>Items</title>
            </meta>
            <types>
              <type name="items">
                <meta>
                  <title>Item</title>
                </meta>
                <properties>
                  <property name="headline" type="text_line">
                    <meta>
                      <title>Headline</title>
                    </meta>
                    <params>
                      <param name="headline" value="true"/>
                    </params>
                  </property>
                  <property name="subline" type="text_line">
                    <meta>
                      <title>Subline</title>
                    </meta>
                  </property>
                </properties>
              </type>
            </types>
          </block>
        </properties>
      </type>
    </types>
  </block>
</properties>
