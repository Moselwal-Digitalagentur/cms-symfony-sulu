<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

  <key>contact</key>

  <meta>
    <title lang="en">Contact</title>
    <title lang="de">Kontakt</title>
  </meta>

  <properties>
    <property name="title" type="text_line" mandatory="true">
      <meta>
        <title lang="en">Title</title>
        <title lang="de">Titel</title>
      </meta>
      <tag name="sulu.node.name"/>
    </property>
    <property name="organisation" type="contact_account_selection">
      <meta>
        <title>Organisation</title>
      </meta>
    </property>
    <property name="description" type="text_editor">
      <meta>
        <title>Beschreibung</title>
      </meta>

      <params>
        <param name="table" value="false"/>
        <param name="link" value="true"/>
        <param name="extra_allowed_content"
               value="img(*)[*]; span(*)[*]; div(*)[*]; iframe(*)[*]; script(*)[*]"/>
        <param name="ui_color" value="#ffcc00"/>
      </params>
    </property>
  </properties>
</template>
