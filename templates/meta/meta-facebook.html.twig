{% set seo = (extension.seo is defined) ? extension.seo : [] %}
{% set seoTitle = seo.title|default(content.title|default()) %}
{% set seoDescription = seo.description|default(content.description|default()) %}
{% set imgUrl = (extension.excerpt.images[0].url is defined and extension.excerpt.images[0].url) ? extension.excerpt.images[0].formats['1920x1080'] :"/uploads/media/1920x1080/09/479-nca-matrix-default.jpg" %}

    <meta property="og:locale" content="de_DE" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ seoTitle }}" />
    <meta property="og:description" content="{{ seoDescription }}" />
    <meta property="og:url" content="{{ app.request.uri }}" />
    <meta property="og:site_name" content="Never Code Alone" />
    <meta property="og:image" content="https://nevercodealone.de{{ imgUrl }}" />
    <meta property="fb:app_id" content="473897419482601" />
