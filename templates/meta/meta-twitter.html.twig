{% set seo = (extension.seo is defined) ? extension.seo : [] %}
{% set seoTitle = seo.title|default(content.title|default()) %}
{% set seoDescription = seo.description|default() %}
{% set imgUrl = (extension.excerpt.images[0].url is defined and extension.excerpt.images[0].url) ? extension.excerpt.images[0].formats['1920x1080'] :"/uploads/media/1920x1080/09/479-nca-matrix-default.jpg" %}

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="{{ seoTitle }}" />
    <meta name="twitter:description" content="{{ seoDescription }}" />
    <meta name="twitter:site" content="@nevercodealone" />
    <meta name="twitter:image" content="https://nevercodealone.de{{ imgUrl }}" />
    <meta name="twitter:creator" content="@nevercodealone" />
